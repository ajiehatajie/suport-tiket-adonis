{% extends 'layouts.backend' %}

{% block title %} Welcome {% endblock %}

{% block content %}

<div class="row">
    <div class="col-lg-6">
        <div class="card-box">
            <h4 class="header-title m-t-0 m-b-30">Tickets Wait Approve</h4>

            <div class="widget-chart-1">
                <div class="widget-chart-box-1">
                    <input data-plugin="knob" data-width="80" data-height="80" data-fgColor="#f05050 "
                           data-bgColor="#F9B9B9" value="{{mainten.length}}"
                           data-skin="tron" data-angleOffset="180" data-readOnly=true
                           data-thickness=".15"/>
                </div>

                <div class="widget-detail-1">
                    <h2 class="p-t-10 m-b-0"> {{mainten.length}} </h2>
                    <p class="text-muted">Tickets Wait Approve</p>
                </div>
            </div>
        </div>
    </div><!-- end col -->


    <div class="col-lg-6">
        <div class="card-box">

            <h4 class="header-title m-t-0 m-b-30">Items Request Approve</h4>

            <div class="widget-box-2">
                <div class="widget-detail-2">
                    <span class="badge badge-success pull-left m-t-20">{{new.length}}% <i
                            class="zmdi zmdi-trending-up"></i> </span>
                    <h2 class="m-b-0"> {{new.length}} </h2>
                    <p class="text-muted m-b-25">Items Request Approve</p>
                </div>
                <div class="progress progress-bar-success-alt progress-sm m-b-0">
                    <div class="progress-bar progress-bar-success" role="progressbar"
                         aria-valuenow="{{new.length}}" aria-valuemin="0" aria-valuemax="100"
                         style="width: {{new.length}}%;">

                    </div>
                </div>
            </div>
        </div>
    </div><!-- end col -->

    {% endblock %}
